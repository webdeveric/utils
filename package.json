{
  "name": "@webdeveric/utils",
  "description": "Just another collection of utilities.",
  "version": "0.7.2",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "keywords": [
    "utilities",
    "asArray",
    "compose",
    "delay",
    "delayAnimationFrame",
    "fcrdns",
    "getType",
    "joinStrings",
    "secToString",
    "toPascalCase",
    "trimEnd",
    "trimStart",
    "uniqueItems",
    "until"
  ],
  "author": {
    "email": "eric@webdeveric.com",
    "name": "Eric King",
    "url": "http://webdeveric.com/"
  },
  "type": "commonjs",
  "main": "./dist/cjs/index.js",
  "types": "./dist/types/index.d.ts",
  "engines": {
    "node": ">=14.17.0"
  },
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/mjs/index.js"
    },
    "./*": {
      "require": "./dist/cjs/*",
      "import": "./dist/mjs/*"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/webdeveric/utils.git"
  },
  "bugs": {
    "url": "https://github.com/webdeveric/utils/issues"
  },
  "homepage": "https://github.com/webdeveric/utils/#readme",
  "scripts": {
    "clean": "rimraf ./dist/",
    "prebuild": "npm run clean",
    "build:cjs": "tsc -p ./tsconfig.json",
    "build:mjs": "tsc -p ./tsconfig.mjs.json",
    "postbuild:cjs": "echo '{\"type\":\"commonjs\"}' > ./dist/cjs/package.json",
    "postbuild:mjs": "echo '{\"type\":\"module\"}' > ./dist/mjs/package.json",
    "build": "npm run build:cjs && npm run build:mjs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./*.js ./src/ ./test/ --ext .ts --fix",
    "test": "NODE_ENV=test jest",
    "spellcheck": "cspell './{.github,src,test}/**/*.{ts,json}' './*.{md,js}' './package.json'",
    "prepublishOnly": "npm run spellcheck && npm run lint && npm test && npm run build"
  },
  "dependencies": {
    "lodash.escaperegexp": "^4.1.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/lodash.escaperegexp": "^4.1.6",
    "@types/node": "^16.4.0",
    "@webdeveric/eslint-config-ts": "^0.4.0",
    "core-js": "^3.11.1",
    "cspell": "^5.3.12",
    "eslint": "^8.0.0",
    "eslint-plugin-jest": "^25.2.1",
    "jest": "^27.0.3",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.0.0",
    "typescript": "^4.4.4"
  }
}
