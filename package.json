{
  "name": "@webdeveric/utils",
  "description": "Just another collection of utilities.",
  "version": "0.29.1",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "keywords": [
    "utilities",
    "helpers"
  ],
  "author": {
    "email": "eric@webdeveric.com",
    "name": "Eric King",
    "url": "http://webdeveric.com/"
  },
  "type": "commonjs",
  "sideEffects": false,
  "main": "./dist/cjs/index.js",
  "types": "./dist/types/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/mjs/index.js"
    },
    "./*": {
      "types": "./dist/types/*.d.ts",
      "require": "./dist/cjs/*.js",
      "import": "./dist/mjs/*.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/webdeveric/utils.git"
  },
  "bugs": {
    "url": "https://github.com/webdeveric/utils/issues"
  },
  "homepage": "https://github.com/webdeveric/utils/#readme",
  "packageManager": "pnpm@8.10.5",
  "scripts": {
    "clean": "rimraf ./dist/",
    "prebuild": "pnpm clean",
    "build:cjs": "tsc -p ./tsconfig.build-cjs.json",
    "build:mjs": "tsc -p ./tsconfig.build-mjs.json",
    "postbuild:cjs": "echo '{\"type\":\"commonjs\"}' > ./dist/cjs/package.json",
    "postbuild:mjs": "echo '{\"type\":\"module\"}' > ./dist/mjs/package.json",
    "build": "pnpm build:cjs && pnpm build:mjs",
    "postbuild": "pnpm validate",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./*.{js,cjs,mjs,ts,cts,mts} ./bin/ ./src/ ./test/ --ext .ts,.mjs,.cjs",
    "test": "vitest",
    "coverage": "vitest run  -c vitest.config.mts --coverage",
    "validate": "./bin/validate.cjs",
    "update-keywords": "./bin/update-keywords.mjs",
    "spellcheck": "cspell './{.github,src,test}/**/*.{ts,json}' './*.{md,js}' './package.json' --no-progress",
    "prepublishOnly": "pnpm typecheck && pnpm spellcheck && pnpm lint && pnpm coverage && pnpm build",
    "format": "prettier --write ./*.{js,json,md} ./bin/ ./src/ ./test/",
    "prepare": "husky"
  },
  "prettier": "@webdeveric/prettier-config",
  "dependencies": {
    "lodash.clonedeep": "^4.5.0",
    "lodash.escaperegexp": "^4.1.2"
  },
  "devDependencies": {
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/lodash.escaperegexp": "^4.1.9",
    "@types/node": "^18.19.14",
    "@vitest/coverage-v8": "^1.2.2",
    "@webdeveric/eslint-config-ts": "^0.7.1",
    "@webdeveric/prettier-config": "^0.2.0",
    "cspell": "^8.3.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "glob": "^10.3.10",
    "husky": "^9.0.10",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
